---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Footer from '~/components/widgets/Footer.astro';
import Header from '~/components/widgets/Header.astro';
import { footerData, headerData } from '~/navigation';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header {...headerData} isSticky showToggleTheme showLogo={false} />
  </Fragment>
  <Fragment slot="footer">
    <Footer {...footerData} showLogo={false} />
  </Fragment>

  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Get in touch"
    items={[
      {
        title: 'Phone',
        description: '+45 50249446',
        icon: 'tabler:phone',
      },
      {
        title: 'Email',
        description: 'hobby3dprints2025@gmail.com',
        icon: 'tabler:mail',
      },
    ]}
  />
</Layout>
